---
import type { Author } from '../content/_authors';

export interface Props {
	date: Date;
    author: Author;
}

function getFormattedDate(date: Date) {
    return new Intl.DateTimeFormat('pt-BR', {dateStyle: 'short', timeZone: 'America/Sao_Paulo'}).format(date);
}

const { date, author } = Astro.props;
const avatarPath = author.avatar?.filePath ?? "/user.webp";
const avatarAlt = author.avatar?.alt ?? "Avatar do usuÃ¡rio";
---

<div>
    <img src={avatarPath} alt={avatarAlt} />
    <h1>{author.name}</h1>
    <aside>{getFormattedDate(date)}</aside>
    <!-- <aside>19 Jan Â· 1 dia atrÃ¡s</aside> -->
</div>

<style>
    div {
        display: grid;
        grid-template-areas: 
                "image title"
                "image time";
        grid-template-columns: min-content;

        column-gap: 10px;
        row-gap: 5px;
    }

    img {
        grid-area: image;

        border-radius: 100%;
        aspect-ratio: 1/1;
        width: 50px;

        object-fit: cover;

        margin: auto;

    }

    h1 {
        grid-area: title;
        
        /* //styleName: ðŸ“˜ | DM Sans/DM Sans - 24px - Bold; */
        font-family: DM Sans;
        font-size: 16px;
        font-weight: 700;
        letter-spacing: 0em;
        text-align: left;

        margin-top: auto;
    }

    aside {
        font-size: 12px;
        grid-area: time;

        margin-bottom: auto;
    }
</style>
