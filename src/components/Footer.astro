import Social from "./Social.astro";
---

<footer>
    <div class="footer-content">
        <div class="links">
            <a href="#">Blog</a>
            <a href="#">Meetup</a>
            <a href="#">4noobs</a>
            <a href="#">Others</a>
        </div>

        <Social
            instagram={"https://www.instagram.com/heartdevs/"}
            twitter={"https://twitter.com/He4rtDevs"}
            github={"https://github.com/he4rt"}
        />

        <aside>
            Â© {new Date().getFullYear()} He4rt Devs. Todos os direitos reservados.
        </aside>
    </div>
</footer>

<style>
    footer {
        display: flex;

        width: 100%;
        height: 230px;

        margin-top: auto;

        background-color: var(--c-elevation-1);
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        align-items: center;

        gap: 24px;

        margin: auto;

        padding: 15px;

        justify-content: space-between;
    }

    .links {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;

        gap: 10px;

        width: 100%;
        max-width: 320px;
    }

    .links a {
        text-decoration: none;
        color: var(--c-text);

        font-family: "DM Sans";
        font-style: normal;
        font-weight: 700;
        font-size: 16px;

        margin: auto;

        transition: color 0.2s;
    }

    .links a:hover {
        color: var(--c-primary);
    }

    aside {
        font-family: "Spline Sans";
        font-style: normal;
        font-weight: 400;
        font-size: 14px;
        color: var(--c-text);
        text-align: center;
    }
</style>
