---
import "../../styles/global.css";
---

<div class="header-background">
  <img class="header-logo-he4rt" src="/logo-he4rt.svg" alt="Logo da Heart" />
  <img
    class="header-logo-he4rtBlog"
    src="/logo-he4rt-blog.svg"
    alt="Logo da HeartBlog"
  />
  <img
    class="header-icon-search"
    src="/search-icon.svg"
    alt="Icone de pesquisa"
  />
  <input class="header-input-search" type="text" />
  <input
    id="dark-mode"
    class="dark-mode-checkbox visually-hidden"
    type="checkbox"
  />
</div>

<style>
  .header-background {
    background-image: url("/header-wave.svg");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;

    width: 100%;
    height: 450px;

    position: relative;
    top: 0;
  }

  .header-logo-he4rt {
    width: 70px;
    height: auto;

    position: absolute;
    top: 55px;
    left: 100px;
  }

  .header-logo-he4rtBlog {
    width: 230px;
    height: auto;

    position: absolute;
    top: 65px;
    left: 180px;
  }

  .header-icon-search {
    width: 20px;
    height: auto;

    position: absolute;
    top: 65px;
    right: 800px;

    z-index: 2;
  }

  .header-input-search {
    width: 300px;
    height: 30px;
    position: relative;
    top: 65px;
    right: 600px;
    background-color: transparent;
    border: none;
    color: var(--c-light-background);
    font-size: 1.2rem;
    padding-left: 20px;
    border-bottom: 2px solid var(--c-primary);
    padding: 5px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const checkbox = document.querySelector(
      ".dark-mode-checkbox"
    ) as HTMLInputElement;

    checkbox.checked = localStorage.getItem("darkMode") === "true";

    checkbox.addEventListener("change", (event: Event) => {
      const target = event.currentTarget as HTMLInputElement;
      localStorage.setItem("darkMode", target.checked.toString());
    });
  });
</script>
